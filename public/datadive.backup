
/* datadive.css */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
}

.search-container {
  display: flex;
  align-items: center;
}

.search-input {
  margin-right: 10px;
}

.results {
  margin-top: 20px;
}

.results ul {
  list-style-type: none;
  padding: 0;
}

.results li {
  margin-bottom: 10px;
}


.modal {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30%;
  max-height: 70vh;
  overflow-y: auto;
  padding: 20px;
  background-color: #fff;
}

.btn-group {
  margin-bottom: 10px;
}

.icon-container {
  display: flex;
  flex-wrap: wrap;
}

.icon {
  width: 20%;
  text-align: center;
  margin-bottom: 10px;
  cursor: pointer;
  border: 3px solid #ddd;
  padding: 5px;
}

.icon.selected {
  width: 20%;
  text-align: center;
  margin-bottom: 10px;
  cursor: pointer;
  border: 3px solid #ddd;
  padding: 5px;
  border-color: rgb(105, 105, 179);
}

.icon:hover {
  background-color: #f5f5f5;
}

.search {
  width: 90% ;
  position: center;
  display: flex;
}

.searchTerm {
  width: 90% !important;
  border: 3px solid #00b4cc;
  border-right: none;
  padding: 5px;
  height: 20px;
  border-radius: 5px 0 0 5px;
  outline: none;
  color: #000;
}

.searchTerm:focus {
  color: #00b4cc;
}

.searchButton {
  width: 40px;
  height: 36px;
  border: 1px solid #00b4cc;
  background: #00b4cc;
  text-align: center;
  color: #fff;
  border-radius: 0 5px 5px 0;
  cursor: pointer;
  font-size: 15px;
}

/*Resize the wrap to see the search bar change!*/
.wrap {
  /* width: 30%; */
  display: flex;
  /* top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); */
}

.w60{
  width: 70%;
}

/* Add styling for modal buttons to match search bar */
.button-container {
  display: flex;
  align-items: center;
}

.search-button, .modal-button {
  width: 150px;
  height: 36px;
  border: 1px solid #00b4cc;
  background: #fff;
  text-align: center;
  color: #00b4cc;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  margin-right: 10px;
}

.search-button:hover, .modal-button:hover {
  background: #0099b9;
  color: #fff;
}

.search-button:focus, .modal-button:focus {
  outline: none;
}

.mt15{
  margin-top : 15px
}

.p1em{
  padding :  1em;
}